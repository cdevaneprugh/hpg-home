<?xml version="1.0" encoding="UTF-8"?>
<config_compilers version="2.0">

<!--for gcc/12.2.0 environment-->
<compiler COMPILER="gnu" MACH="hipergator">
  <LDFLAGS>
    <append>-I/apps/netcdf/4.7.2/include</append>
  </LDFLAGS>

  <FFLAGS>
    <append>-fallow-argument-mismatch -fallow-invalid-boz</append>
  </FFLAGS>
  
  <LAPACK_LIBDIR>/apps/gcc/12.2.0/lapack/3.11.0/lib</LAPACK_LIBDIR>
  <NETCDF_PATH>/apps/netcdf/4.7.2</NETCDF_PATH>

  <SLIBS>
    <append>-L/apps/netcdf/4.7.2/lib -lnetcdf -lnetcdff</append> 
    <append>-L/apps/gcc/12.2.0/lapack/3.11.0/lib -llapack -lblas</append>
  </SLIBS>
</compiler>

