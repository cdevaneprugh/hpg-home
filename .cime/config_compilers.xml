<?xml version="1.0" encoding="UTF-8"?>
<config_compilers version="2.0">

<compiler MACH="hipergator">

  <CONFIG_ARGS>
    <base> --host=Linux </base>
  </CONFIG_ARGS>
      
  <CFLAGS>
    <append>-I$ENV{HPC_NETCDF_INC}</append>
  </CFLAGS>
     
  <NETCDF_PATH>$ENV{HPC_NETCDF_DIR}</NETCDF_PATH>
  
  <SLIBS>
    <append>-L$(NETCDF_PATH)/lib -lnetcdf</append> 
    <append>$SHELL{${NETCDF_PATH}/bin/nc-config --flibs}</append>
  </SLIBS>

</compiler>

</config_compilers>
